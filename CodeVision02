import java.util.Scanner; // 입력을 받기 위해 Scanner 클래스 import

public class BasicIOAndTypes {
    public static void main(String[] args) {

        // 출력 예제
        System.out.println("=== Java 기초: 입출력과 자료형 ===");
        System.out.println("Hello, CodeVision 스터디!");

        // 변수 선언 및 기본 자료형 소개
        int number = 10;            // 정수형
        double pi = 3.14159;        // 실수형
        char grade = 'A';           // 문자형
        boolean isJavaFun = true;   // 불리언형 (참/거짓)

        // 변수 출력
        System.out.println("\n[기본 자료형 출력]");
        System.out.println("정수형 변수 number: " + number);
        System.out.println("실수형 변수 pi: " + pi);
        System.out.println("문자형 변수 grade: " + grade);
        System.out.println("불리언형 변수 isJavaFun: " + isJavaFun);

        // Scanner를 이용한 입력 예제
        Scanner scanner = new Scanner(System.in);

        System.out.print("\n이름을 입력하세요: ");
        String name = scanner.nextLine(); // 문자열 입력 받기

        System.out.print("나이를 입력하세요: ");
        int age = scanner.nextInt(); // 정수 입력 받기

        // 입력값 출력
        System.out.println("\n[입력 결과]");
        System.out.println("안녕하세요, " + name + "님!");
        System.out.println("당신의 나이는 " + age + "세 입니다.");

        scanner.close(); // Scanner 닫기
    }
}
